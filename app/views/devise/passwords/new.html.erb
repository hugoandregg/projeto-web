<section>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<h2 style="text-align:center">Forgot your password?</h2>
			<div class="log-form">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>
		          <div class="form-group">
		            <label for="exampleInputEmail1">Email</label>
		              <%= f.email_field :email, autofocus: true, class:"form-control", id:"exampleInputEmail1" %>
		          </div>				  				   				    

				  <div class="actions">
				    <%= f.submit "Send me reset password instructions", id:"forget-btn", class:"btn btn-primary" %>
				  </div>
				<% end %>

				
			</div>
		</div>
	</div>
</section>