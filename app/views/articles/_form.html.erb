<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 

<section>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h3 style="text-align:center; font-weight:bold">New Article</h3>
      <div class="log-form">
        <div class="form-group">
          <label for="exampleInputName">Title</label>
          <%= f.text_field :title, class:"form-control", id:"exampleInputName" %>
        </div>
        <%= f.hidden_field :user_id, :value => current_user.id %>

        <div class="form-group">
          <label for="exampleInputText">Text</label>
          <%= f.text_area :text, class:"form-control", id:"exampleInputText" %>
        </div>

        <div class="actions">
          <%= f.submit "Create Article", class:"btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-4"></div>
  </div>
</section>

<% end %>

