<section class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-7">
      <% @articles.each do |article| %>
        <h2 id="title-font"><%= link_to article.title, article_path(article) %></h2>
            <p id="content-font"><%= article.text %></p>
            
            <ul class="icons">
              <li>
                <span id="number_votes"><%= article.votes.count %></span> <i id="inactive-heart" class="glyphicon glyphicon-heart"></i>
              </li>
              <li>
                <%= link_to article_path(article) do %>
                  <i class="glyphicon glyphicon-comment"></i>
                <% end %>
              </li>

              <% if current_user == article.user %>
                <li><%= link_to edit_article_path(article) do %>
                  <i class="glyphicon glyphicon-edit"></i>
                  <% end %>
                </li>

                <li><%= link_to article_path(article),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } do %>
                  <i class="glyphicon glyphicon-trash"></i>
                  <% end %>
                </li>
              <% end %>
        </ul>
        <hr>
        <br>
        <div class="col-md-3">
        </div>
      <% end %>
      <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</section>